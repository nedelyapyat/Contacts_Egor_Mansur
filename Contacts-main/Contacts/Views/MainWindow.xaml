<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:uc="clr-namespace:Contacts.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#2B2B2B">
    <Grid>
        <StackPanel Margin="10">
            <Border CornerRadius="10" BorderBrush="#FFD700" BorderThickness="1" Padding="10" Margin="0 0 0 10" Background="#1C1C1C">
                <TextBox
                    Name="contactsSearchTxtBox"
                    TextChanged="FilterCurrentContacts"
                    Padding="5"
                    Background="#1C1C1C"
                    BorderBrush="#FFD700"
                    Foreground="#FFD700"
                    FontWeight="Bold"/>
            </Border>
            <Border CornerRadius="10" BorderBrush="#FFD700" BorderThickness="1" Padding="10" Margin="0 0 0 10" Background="#1C1C1C">
                <Button 
                    Margin="0 10 0 0"
                    Name="btnAddContact"
                    Click="OpenAddWindow"
                    Content="Add Contact"
                    Padding="10"
                    Background="#FFD700"
                    Foreground="#1C1C1C"
                    BorderBrush="#FFD700"
                    FontWeight="Bold"/>
            </Border>
            <ListBox
                HorizontalContentAlignment="Stretch"
                Margin="0 10 0 0"
                Name="contactsListBox"
                SelectionChanged="ContactsListBox_OnSelectionChanged"
                Height="300"
                BorderThickness="1"
                BorderBrush="#FFD700"
                Background="#1C1C1C">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="#1C1C1C"/>
                        <Setter Property="BorderBrush" Value="#FFD700"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Foreground" Value="#FFD700"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <uc:ContactView Contact="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
