<Window x:Class="Contacts.Views.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Contacts.Views"
        mc:Ignorable="d"
        Title="AddContact" Height="400" Width="500"
        Background="#2B2B2B">
    <Grid>
        <StackPanel Margin="10">
            <TextBox
                Margin="10 5"
                Name="nameTextBox"
                Background="#1C1C1C"
                BorderBrush="#FFD700"
                Foreground="#FFD700"
                FontWeight="Bold"
                Padding="5"/>
            <TextBox
                Margin="10 5"
                Name="emailTextBox"
                Background="#1C1C1C"
                BorderBrush="#FFD700"
                Foreground="#FFD700"
                FontWeight="Bold"
                Padding="5"/>
            <TextBox
                Margin="10 5"
                Name="phoneTextBox"
                Background="#1C1C1C"
                BorderBrush="#FFD700"
                Foreground="#FFD700"
                FontWeight="Bold"
                Padding="5"/>
            <Button 
                Margin="10 5"
                Name="addContactButton"
                Click="AddContact_Click"
                Content="Add"
                Background="#FFD700"
                Foreground="#1C1C1C"
                BorderBrush="#FFD700"
                FontWeight="Bold"
                Padding="10"/>
            <Button 
                Margin="10 5"
                Name="deleteButton"
                Content="Delete"
                Background="#FFD700"
                Foreground="#1C1C1C"
                BorderBrush="#FFD700"
                FontWeight="Bold"
                Padding="10"/>
            <Button 
                Margin="10 5"
                Name="cancelButton"
                Content="Cancel"
                Background="#FFD700"
                Foreground="#1C1C1C"
                BorderBrush="#FFD700"
                FontWeight="Bold"
                Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
