<Window x:Class="Contacts.Views.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Contacts.Views"
        mc:Ignorable="d"
        Title="AddContact" Height="400" Width="500">
    <Grid>
        <StackPanel 
            Margin="5">
            <TextBox
                Margin="10 5 "
                Name="nameTextBox" />
            <TextBox
                Margin="10 5 "
                Name="emailTextBox" />
            <TextBox
                Margin="10 5 "
                Name="phoneTextBox" />
            <Button 
                Margin="10 5"
                Name="addContactButton"
                Click="AddContact_Click"
                Content="Add"/>
            <Button 
                Margin="10 5"
                Name="cancelButton" 
                Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
